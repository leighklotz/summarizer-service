{% extends "cards/card-base.page" %}
{% block title %}Scuttle Summarizer{% endblock %}
{% block h1 %}Scuttle Summarizer{% endblock %}
{% block content %}
  <form method="POST">
    <div id="grid">
      <label for="url">Enter URL:</label>
      <input type="url" id="url" name="url" required value="{{card.url}}">
    </div>
    <button type="submit" id="submit-button">Scuttle</button>
    <div id="loading"></div>
  </form>
{% endblock %}
{% block helpbody %}
  {% include('cards/scuttle/help.body') %}
{% endblock %}

